<div class="column is-half">
    <% if user_signed_in? %>
    <article class="media box">
        <figure class="media-left">
            <p class="image is-64x64">
                <%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name) %>
            </p>
        </figure>
        <div class="media-content">
            <%= render 'messages/form' %>
        </div>
    </article>
    <% end %>


<% @messages.each do | message | %>
    <div class="box">
        <article class="media">
            <div class="media-left">
                <figure class= "image is 64x64">
                    <%= gravatar_image_tag(message.user.email, size: 64, alt: message.user.name) %>
                </figure>
            </div>
            <div class="media-content">
                <div class="content">
                    <strong><%= message.user.name %></strong><br />
                    <small><%= message.user.username %><small><br/>
                    <p><%= message.message %></p>
                </div>
                <% if user_signed_in?%>
                <nav class="level">
                    <div class="level-left is-mobile">
                        <%= link_to message, class: "level-item" do %>
                            <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
                        <% end %>
                        <%= link_to edit_message_path(message), class: "level-item" do %>
                            <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
                        <% end %>
                        <%= link_to message, method: :delete, data: { confirm: "Are you sure you want to delete this message?"
                        } do %>
                            <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
                        <% end %>
                    </div>
                </nav>
                <% end %>
            </div>
        </article>
    </div>
<% end %>
</div>