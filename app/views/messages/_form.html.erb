<%= simple_form_for(@message) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :message, label: "What's on your mind?", input_html: { class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: "Compose a message..." %>
  </div>
</div>
<%= f.button :submit, class: "button is-info" %>
<% end %>